{
  "name": "sdd-mcp-server",
  "version": "3.1.0",
  "description": "MCP server for spec-driven development workflows across AI-agent CLIs and IDEs",
  "main": "dist/index.js",
  "bin": {
    "sdd-mcp-server": "sdd-entry.js",
    "sdd-install-skills": "dist/cli/install-skills.js"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "skills/**/*",
    "steering/**/*",
    "rules/**/*",
    "contexts/**/*",
    "agents/**/*",
    "hooks/**/*",
    "sdd-entry.js",
    "mcp-server.js",
    "atomicWrite.js",
    "documentGenerator.js",
    "specGenerator.js",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__.*\\.test\\.ts$ --testPathIgnorePattern=integration|e2e",
    "test:integration": "jest --testPathPattern=integration.*\\.test\\.ts$",
    "test:e2e": "jest --testPathPattern=e2e.*\\.test\\.ts$",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:ci"
  },
  "keywords": [
    "mcp",
    "sdd",
    "spec-driven-development",
    "ai-agent",
    "cli"
  ],
  "author": "SDD MCP Server",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yi-john-huang/sdd-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/yi-john-huang/sdd-mcp/issues"
  },
  "homepage": "https://github.com/yi-john-huang/sdd-mcp#readme",
  "dependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@typescript-eslint/typescript-estree": "^8.43.0",
    "acorn": "^8.15.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "esprima": "^4.0.1",
    "handlebars": "^4.7.8",
    "i18next": "^25.5.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.8.0",
    "inversify": "^6.0.2",
    "os-locale": "^6.0.2",
    "reflect-metadata": "^0.2.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/esprima": "^4.0.6",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.16.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}